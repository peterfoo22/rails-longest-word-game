<h1>Word Game</h1>
<h2><%=@random_letters %><h2>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'our_letters', @random_letters %>
  <input type="text" name="word" placeholder="What is your word?">
  <input type="submit">
</form>
